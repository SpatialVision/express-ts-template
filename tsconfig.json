{
	"compileOnSave": true,
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"noImplicitAny": true,
		"moduleResolution": "classic",
		"sourceMap": true,
		"outDir": "dist",
		"rootDir": "src",
		"lib": ["es5", "dom"],
		"baseUrl": ".",
		"resolveJsonModule": true,
		"paths": {
			"*": [
				"node_modules/*",
				"src/types/*"
			]
		}
	},
	"include": [
		"src/**/*"
	],
	"files": [
		"src/index.d.ts"
	],
	"exclude": [
		".vscode",
		"node_modules",
		"lib"
	]

}